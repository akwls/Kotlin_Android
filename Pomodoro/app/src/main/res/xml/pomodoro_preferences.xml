<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="알람 설정" >

        <EditTextPreference
            android:key="preset_times"
            android:title="알람 시간 설정"
            android:summary="알람 시간을 설정합니다."
            android:defaultValue="5,10,15,20,25,30"
            android:dialogMessage="알람 시간 설정 (단위는 분)"
            android:iconSpaceReserved="false" />

        <ListPreference
            android:key="notify_method"
            android:title="알림 방식"
            android:summary="%s"
            android:entries="@array/notify_method_entries"
            android:entryValues="@array/notify_method_values"
            android:iconSpaceReserved="false" />

        <SeekBarPreference
            android:key="volume"
            android:title="볼륨 설정"
            android:summary="알람 음악의 볼륨을 설정합니다."
            android:defaultValue="50"
            android:max="100"
            android:iconSpaceReserved="false" />

        <EditTextPreference
            android:key="vibrate_time"
            android:title="진동 시간 설정"
            android:summary="진동 시간을 설정합니다."
            android:defaultValue="3"
            android:dialogMessage="진동 시간 설정(단위는 초)"
            android:iconSpaceReserved="false" />

        <EditTextPreference
            android:key="time_format"
            android:title="시간 표시 방식 설정"
            android:summary="상태바에 표시되는 시간 표시 방식을 설정합니다."
            android:defaultValue="h:mm:ss"
            android:dialogMessage="시간 표시 방식 설정(ex: h:mm:ss)"
            android:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>