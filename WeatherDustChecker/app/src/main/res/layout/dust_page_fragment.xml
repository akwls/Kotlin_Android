<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_name"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="지역"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/dust_status_icon"
            android:layout_marginTop="100dp"
            android:layout_gravity="center" />

        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dust_status_title"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="현재 상태"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/textColorHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dust_pm25_status_text"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dust_pm25_intensity_text"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/textColorHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dust_pm10_status_text"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dust_pm10_intensity_text"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />

        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/co2"
            android:text="이산화 탄소 : "
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="16sp" />
        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/o3"
            android:text="오존 : "
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />
        <TextView
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no2"
            android:text="이산화 질소 : "
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="16sp" />


    </LinearLayout>

</ScrollView>